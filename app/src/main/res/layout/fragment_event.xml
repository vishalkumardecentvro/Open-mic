<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="10dp"
  tools:context=".fragments.home.EventFragment">

  <ImageView
    android:id="@+id/ivEventBanner"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="10dp"
    android:scaleType="fitXY"
    android:src="@drawable/tanmay_comedy" />

  <TextView
    android:id="@+id/tvEventName"
    style="@style/default_text_view_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/ivEventBanner"
    android:drawablePadding="10dp"
    android:fontFamily="serif"
    android:text="Event name"
    android:textSize="18sp"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/tvDate"
    style="@style/default_text_view_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/tvEventName"
    android:drawablePadding="10dp"
    android:text="Date"
    app:drawableLeftCompat="@drawable/ic_event"
    app:drawableTint="@color/brand_color_light" />

  <TextView
    android:id="@+id/tvTime"
    style="@style/default_text_view_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/tvDate"
    android:drawablePadding="10dp"
    android:text="Time"
    app:drawableLeftCompat="@drawable/ic_time"
    app:drawableTint="@color/brand_color_light" />

  <TextView
    android:id="@+id/tvLocation"
    style="@style/default_text_view_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/tvTime"
    android:drawablePadding="10dp"
    android:text="Location"
    app:drawableLeftCompat="@drawable/ic_location"
    app:drawableTint="@color/brand_color_light" />

  <TextView
    style="@style/default_text_view_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/tvLocation"
    android:padding="5dp"
    android:text="Description"
    android:id="@+id/tvDescription"
    android:textSize="17sp"
    android:textStyle="normal" />

  <Button
    android:id="@+id/bookTicketButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:text="Book tickets" />

</RelativeLayout>